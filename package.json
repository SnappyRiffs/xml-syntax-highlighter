{
  "name": "xml-syntax-highlighter",
  "displayName": "XML syntax highlighter",
  "description": "Highlights XML to bright colors",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "xml",
        "scopeName": "text.xml",
        "path": "./syntaxes/xml.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "XML Angle Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/xml-angle-theme-color-theme.json"
      }
    ]
  },

  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}